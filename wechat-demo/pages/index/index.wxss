.container {
    background-color: #F2f2f2;
}

.banner {
    background: linear-gradient(to bottom, #96cce9, #e6f2f9);
    height: 400px;
    padding: 24px 0;
    position: relative;
}

.user-local {
    text-align: center;
}

.user-local text {
    margin-left: 6px;
    margin-right: 6px;
    font-weight: 600;
}

.broad {
    /* position: relative; */
    display: flex;
    height: 34px;
    width: 300px;
    margin: 14px auto;
    border-radius: 3px;
    background-color: rgba(0, 0, 0, 0.2);
}
.broad .icon-wrapper {
    width: 40px;
    line-height: 34px;
    text-align: center;
}
.broad .icon-wrapper image {
    width: 24px;
    height: 24px;
    vertical-align: middle;
}

.broad .broad-title {
    flex: 1;
    font-size: 14px;
    color: #efefef;
    line-height: 34px;
}

.user-local image {
    height: 20px;
    width: 20px;
    vertical-align: middle;
}

.post-btn {
    position: absolute;
    right: 0;
    width: 80px;
    height: 34px;
    border-radius: 2px;
    background-color: rgba(0, 0, 0, 0.2);
    text-align: center;
}
.post-btn image {
    width: 22px;
    height: 22px;
    vertical-align: middle;
    margin-right: 6px;
}
.post-btn text {
    font-size: 16px;
    color: #efefef;
    line-height: 34px;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

.main-data {
    text-align: center;
}

.main-data .temp {
    font-size: 80px;
    font-weight: 300;
    color: #333;
}

.main-data .p1 {
    font-size: 18px;
}
.main-data .p1 .line {
    display: inline-block;
    height: 20px;
    width: 1px;
    background-color: #332e2e;
    vertical-align: middle;
    margin-left: 12px;
    margin-right: 12px;
}
.main-data .p1 .pm {
    display: inline-block;
    vertical-align: middle;
    height: 28px;
    line-height: 28px;
    padding: 0 14px;
    border-radius: 3px;
    background-color: #16a368;
    color: #efefef;
    /* font-size: ; */
}

.main-data .p2 {
    display: flex;
    justify-content: center;
    color: #888;
    margin: 20px;
}
.main-data .p2 view:not(:last-child) {
    margin-right: 14px;
}
.main-data .p2 view text {
    margin-right: 6px;
}
view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    height: 100%;
    height: 15px;
    display: inline-block;
    background-color: #f9f027;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
}

.venues_box {
    padding: 0 10rpx;
}

.venues_item {
    display: inline-block;
    width: 49%;
    margin: 0 0.5%;
}

.venues_item image {
    width: 100%;
    height: 90px;
}

.choice_box {
    padding: 0 10rpx;
}

.choice_box .choice_list .choice_item {
    margin-bottom: 15px;
}

.choice_box .choice_list image {
    width: 100%;
    height: 200px;
}

.choice_box .choice_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #333;
}